generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Keep optional for OAuth users
  role          String    @default("creator") // "admin" or "creator"
  niche         String?
  plan          String    @default("free")
  credits       Int       @default(10)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth Relations
  accounts      Account[]
  sessions      Session[]
  
  // Custom Relations
  posts          Post[]
  aiReports      AIReport[]
  communityPosts CommunityPost[]
  // Engagement & Gamification
  creatorScore   Int       @default(0)
  streakCount    Int       @default(0)
  lastPostedAt   DateTime?
  
  // Relations
  videoInsights   VideoInsight[]
  instagramInsights InstagramInsight[]
  communityGroups CommunityGroup[]
  groupMemberships CommunityMember[]
  
  // Custom Relations (Restored)
  // posts, aiReports, communityPosts are already defined above or consolidated.
  channelStats   ChannelStats[]
  comments       CommunityComment[]
  
  // Legacy/Simple Social Connection Fields (Optional)
  youtubeChannelId String?
  youtubeHandle    String?
  youtubeStats     String? // JSON String
  instagramId      String?
  instagramHandle  String?
  instagramStats   String? // JSON String
}

// NextAuth Models (Restored)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

// Deep Analytics Models (Restored)
model ChannelStats {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  platform  String   // "youtube" or "instagram"
  
  // Core Metrics
  followers Int
  views     Int
  engagementRate Float?
  
  // Snapshots (Historical Data)
  date      DateTime @default(now())
  
  // Detailed JSON for flexibility (videos list, top posts, etc)
  rawData   String? // JSON string
}

model Post {
  id            String    @id @default(uuid())
  title         String
  content       String?
  platform      String
  status        String    @default("draft") // "draft", "scheduled", "published"
  scheduledDate DateTime?
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  createdAt     DateTime  @default(now())
}

model AIReport {
  id        String   @id @default(uuid())
  type      String   // "hook", "caption", "script", "analysis"
  content   String   // JSON string or text result
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

// ---------------------------------------------------------
// NEW V2.0 MODELS
// ---------------------------------------------------------

model InstagramInsight {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  date      DateTime @default(now())
  
  // Profile Stats
  followers Int
  reach     Int      @default(0)
  impressions Int    @default(0)
  profileViews Int   @default(0)
  
  // Content JSON
  topMedia  String?  // JSON string of top performing posts
}

model VideoInsight {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  videoId   String
  title     String
  platform  String   // "youtube" or "instagram"
  
  // AI Analysis
  viralScore      Int      @default(0) // 0-100
  thumbnailScore  Int      @default(0) // 0-100
  hookStrength    String?  // "Weak", "Good", "Viral"
  improvementTips String?  // AI generated advice
  
  createdAt DateTime @default(now())
}

model CommunityGroup {
  id          String   @id @default(uuid())
  name        String
  description String?
  isPrivate   Boolean  @default(false)
  creatorId   String
  creator     User     @relation(fields: [creatorId], references: [id])
  
  members     CommunityMember[]
  posts       CommunityPost[]
  
  createdAt   DateTime @default(now())
}

model CommunityMember {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  groupId   String
  group     CommunityGroup @relation(fields: [groupId], references: [id])
  role      String   @default("member") // "admin", "member"
  joinedAt  DateTime @default(now())

  @@unique([userId, groupId])
}

model CommunityPost {
  id        String   @id @default(uuid())
  content   String
  likes     Int      @default(0)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  // V2.0 Group Logic
  groupId   String?
  group     CommunityGroup? @relation(fields: [groupId], references: [id])
  visibility String  @default("public") // "public", "group"
  
  comments  CommunityComment[]
  
  createdAt DateTime @default(now())
}

model CommunityComment {
  id        String   @id @default(uuid())
  content   String
  postId    String
  post      CommunityPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
