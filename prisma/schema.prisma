generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Keep optional for OAuth users
  role          String    @default("creator") // "admin" or "creator"
  niche         String?
  plan          String    @default("free")
  credits       Int       @default(10)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth Relations
  accounts      Account[]
  sessions      Session[]

  // Community Relations
  communityPosts CommunityPost[]
  comments       CommunityComment[]
  likes          CommunityLike[]
  
  // Legacy Post Relation
  posts          Post[]
  
  // Community 2.0 Relations
  createdGroups CommunityGroup[] @relation("CreatedGroups")
  joinedGroups  GroupMember[]

  // Engagement & Gamification
  creatorScore   Int       @default(0)
  streakCount    Int       @default(0)
  lastPostedAt   DateTime?
  
  // Relations
  aiReports      AIReport[]
  videoInsights   VideoInsight[]
  instagramInsights InstagramInsight[]

  // Legacy/Simple Social Connection Fields (Optional)
  channelStats   ChannelStats[]
  youtubeChannelId String?
  youtubeHandle    String?
  youtubeStats     String? // JSON String
  instagramId      String?
  instagramHandle  String?
  instagramStats   String? // JSON String
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

model ChannelStats {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  platform  String   // "youtube" or "instagram"
  
  // Core Metrics
  followers Int
  views     Int
  engagementRate Float?
  
  // Snapshots (Historical Data)
  date      DateTime @default(now())
  
  // Detailed JSON for flexibility (videos list, top posts, etc)
  rawData   String? // JSON string
}

model Post {
  id            String    @id @default(uuid())
  title         String
  content       String?
  platform      String
  status        String    @default("draft") // "draft", "scheduled", "published"
  scheduledDate DateTime?
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  createdAt     DateTime  @default(now())
}

model AIReport {
  id        String   @id @default(uuid())
  type      String   // "hook", "caption", "script", "analysis"
  content   String   // JSON string or text result
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

// ---------------------------------------------------------
// NEW V2.0 MODELS
// ---------------------------------------------------------

model InstagramInsight {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  date      DateTime @default(now())
  
  // Profile Stats
  followers Int
  reach     Int      @default(0)
  impressions Int    @default(0)
  profileViews Int   @default(0)
  
  // Content JSON
  topMedia  String?  // JSON string of top performing posts
}

model VideoInsight {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  videoId   String
  title     String
  platform  String   // "youtube" or "instagram"
  
  // AI Analysis
  viralScore      Int      @default(0) // 0-100
  thumbnailScore  Int      @default(0) // 0-100
  hookStrength    String?  // "Weak", "Good", "Viral"
  improvementTips String?  // AI generated advice
  
  createdAt DateTime @default(now())
}

model CommunityGroup {
  id          String   @id @default(cuid())
  name        String
  description String?
  imageUrl    String?
  code        String   @unique // Invite code
  isPrivate   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt @default(now()) @default(now())
  
  createdById String
  createdBy   User     @relation("CreatedGroups", fields: [createdById], references: [id], onDelete: Cascade)
  
  members     GroupMember[]
  posts       CommunityPost[]
}

model GroupMember {
  id        String   @id @default(cuid())
  joinedAt  DateTime @default(now())
  role      String   @default("MEMBER") // ADMIN, MEMBER
  status    String   @default("JOINED") // JOINED, INVITED, REQUESTED
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  groupId   String
  group     CommunityGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
}

model CommunityPost {
  id        String   @id @default(cuid())
  content   String
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  groupId   String?
  group     CommunityGroup? @relation(fields: [groupId], references: [id], onDelete: Cascade)
  visibility String  @default("public") // "public", "group"

  likes     CommunityLike[]
  comments  CommunityComment[]
}

model CommunityComment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  postId    String
  post      CommunityPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  // Nested Comments
  parentId  String?
  parent    CommunityComment? @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   CommunityComment[] @relation("CommentReplies")
}

model CommunityLike {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  postId    String
  post      CommunityPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
}
